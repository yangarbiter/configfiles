// Place your settings in this file to overwrite the default settings
{
  "keyboard.dispatch": "keyCode",
  "terminal.integrated.shellArgs.linux": ["--login"],
  "terminal.integrated.shellArgs.osx": ["--login"],
  "telemetry.enableCrashReporter": false,
  "terminal.integrated.scrollback": 3000,

  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before":["<leader>", "w"],
      "after":[],
      "commands": [
        {"command": ":w!"}
      ]
    },
    {
      "before":["<leader>", "q"],
      "after":[],
      "commands": [
        {"command": ":q"}
      ]
    },
    {
      "before":["<leader>", "g"],
      "after":[],
      "commands": [
        "editor.action.goToDeclaration"
      ]
    },
    {
      "before":["<leader>", "t"],
      "after":[],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before":["<leader>", "d"],
      "after":[],
      "commands": [
        "editor.action.goToImplementation"
      ]
    },
    {
      "before":["<leader>", "r", "f"],
      "after":[],
      "commands": [
        "editor.action.referenceSearch.trigger"
      ]
    },
  ],
  "vim.history": 300,
  "vim.hlsearch": true,

  "[tex]": {
    "cSpell.ignoreRegExpList": [
      "\\\\\\w*(\\[.*?\\])?(\\{.*?\\})?",
      "\\$.+?\\$"
    ] 
  },
  "python.venvPath": "~/.pyenv",
  "python.pythonPath": "$HOME/.pyenv/versions/3.6.5/bin/python",
  "python.jediEnabled": true,
  "[python]": {},

  "typescript.check.npmIsInstalled": false,

  "explorer.confirmDelete": false,

  "git.autofetch": true,

  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.toolchain": [
  {
    "command": "pdflatex",
    "args": [
      "-synctex=1",
      "-interaction=nonstopmode",
      "-file-line-error",
      "%DOC%"
    ]
  }, {
    "command": "bibtex",
    "args": [
      "%DOCFILE%"
    ]
  }, {
    "command": "pdflatex",
    "args": [
      "-synctex=1",
      "-interaction=nonstopmode",
      "-file-line-error",
      "%DOC%"
    ]
  }, {
    "command": "pdflatex",
    "args": [
      "-synctex=1",
      "-interaction=nonstopmode",
      "-file-line-error",
      "%DOC%"
    ]
  }
  ],
  "latex-workshop.message.update.show": false,

  "cSpell.maxNumberOfProblems": 1000,
  "cSpell.userWords": [
    "proba"
  ],
  "cSpell.enabledLanguageIds": [
    "c",
    "cpp",
    "csharp",
    "go",
    "javascript",
    "javascriptreact",
    "json",
    "latex",
    "markdown",
    "php",
    "plaintext",
    "python",
    "tex",
    "text",
    "typescript",
    "typescriptreact",
    "yml"
  ],
}
